include ../_mixins
doctype html
html(lang="ru")
  head
    meta(http-equiv="Content-Type" content="text/html; charset=UTF-8")
    +meta('viewport', 'width=device-width, initial-scale=1')
    block SEO
    each val, i in copyright
        +meta(i, val)
    +link('favicon.ico', 'shortcut icon')
    +link('swiper/styles.min', 'stylesheet')
    +link('styles.min', 'stylesheet')
  body
    header.header
      block header

    main
      block content

    footer
      block footer

    +script('swiper/script.min')
    +script('app.min')
